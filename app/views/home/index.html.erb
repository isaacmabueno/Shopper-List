
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class ='topbg'>
      <h1 class= 'header'>SHOPPER LIST</h1>
      </div>
      <div class='border'>
      <li><a href="/new">Add Item to list</a></li>

      <h4>List of products to purchase</h4>

      <table class='table'>

        <thead>
          <tr>
            <td>
              <h3 class= 'dividers'>
              Product Name
            </h3>
            </td>
            <td>
              <h3 class= 'dividers'>
              Quantity
              </h3>
            </td>
            <td>
              <h3 class= 'dividers'>
              Knock It Off
              </h3>
            </td>
          </tr>
        </thead>
        <tbody>

      <% @products.each do |item| %>

        <tr>
          <td>
            <h4>
            <%= item.name %>
            </h4>
          </td>
          <td>
            <h5>
            <%= item.quantity %>
          </h5>
          </td>
          <td>
            <%= form_for item, url: {action: 'delete'} do |f| %>
              <%= f.hidden_field :id %>
              <%= f.submit 'Check Off' %>
            <% end %>
          </td>
        </tr>

      <% end %>
      </tbody>
      </table>
    </div>
    </div>

  </div>

</div>
